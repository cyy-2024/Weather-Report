<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E9F1"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/detail_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        android:text="Date"
        android:textColor="@color/c"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Weather Description"
        android:textColor="@color/c"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_temperature_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Day Temperature"
        android:textColor="@color/c"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_temperature_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Night Temperature"
        android:textColor="@color/c"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Wind"
        android:textColor="@color/c"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Wind Speed"
        android:textColor="@color/c"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_tip_icon"
            android:layout_width="54dp"
            android:layout_height="59dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_tip1" />

        <TextView
            android:id="@+id/detail_tip"
            android:layout_width="251dp"
            android:layout_height="110dp"
            android:gravity="center"
            android:text="Tip"
            android:textColor="@color/b"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>





